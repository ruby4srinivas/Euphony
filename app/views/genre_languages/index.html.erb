<h1>Listing genre_languages</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @genre_languages.each do |genre_language| %>
      <tr>
        <td><%= genre_language.genre_language_name %></td>
        <td><%= link_to 'Show', genre_language %></td>
        <td><%= link_to 'Edit', edit_genre_language_path(genre_language) %></td>
        <td><%= link_to 'Destroy', genre_language, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

