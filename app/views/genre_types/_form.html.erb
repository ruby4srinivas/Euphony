<%= simple_form_for(@genre_type) do |f| %>

  <%= render 'shared/error_message' ,target: @genre_type%>

  <div class="form-actions">
    <%= f.input :genre_type_name , label: "Type"%>
    <%= f.association :genre_language ,label_method: :genre_language_name, value_method: :id, prompt: "Choose Language", allow_blank: true %>
    <%= f.button :submit, class: "btn btn-primary" %>
    <%= f.submit 'Create & Add New' , class: "btn btn-success"%>
  </div>
<% end %>
