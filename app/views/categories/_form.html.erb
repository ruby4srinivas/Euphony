<%= simple_form_for @category do |f| %>

    <% if @category.errors.any? %>
        <%= render 'shared/error_message' ,target: @category%>
    <% end %>

    <div class="actions">
      <%= f.input :category_name,autofocus: true,  placeholder: "Add Category" %>
      <%= f.submit  class: "btn btn-primary"%>
      <%= f.submit 'Create & Add New' , class: "btn btn-success"%>
    </div>
<% end %>
